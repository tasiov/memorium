<div class="main_memorial">
	<div class="title_description">
		<h3>Memorial Title: <%= @memorial.title %></h3>
		<p>Honoring <%= @memorial.name %> </p>
		<p><%= @memorial.description %></p>

		<%= form_tag user_memorial_path(@memorial.users.first, @memorial), :method => "get" do %>
			<p id="alert-message"><br></p>
			<section class ="searchbtn">
				<%= text_field_tag(:search, params[:search], class: "search_bar", autocomplete: "off") %>
				<%= submit_tag("Search", :name => nil) %><br>
				<ul id="search-dropdown">
				<!-- 	<li class="drop-names"></li>  -->
				</ul>
				<div class="invites">
				<!-- 	<span class="invite-buttons"></span>'  -->
				<!-- <button id="cancel-invite">x</button> -->
				</div>
		</nav>
			</section>
		<% end %>
	</div>
	<br>

<!-- 	<div class="mempicture_upload">
	</div> -->

	<div class="people_posts">
	Post comment
	<%= form_tag user_memorial_path(@memorial.users.first, @memorial), :method => "post", :id => "comment_form" do %>
		<%= text_field_tag(:enter_comment, params[:enter_comment], id: "comment_bar") %>
		<%= submit_tag("Enter", :id => "submit_comment") %>
	<% end %>
	<div id="get_data" style="display: none;" user-id="<%= @current_user.id %>" memorial-id="<%= @memorial.id %>"><%= @current_user.first_name %></div>
	<br>

	<div id= "comment-list">
		<% @memorial.comments.each do |comment| %>
			<div class="comment_bubble">

				<span class='user_name'><%= comment.user.first_name %></span>   
				<br>
				<span class="user_msg"><%= comment.message %><br>
				<% if comment.created_at > (Time.new - 86400000) %>
					<span class='comment_time'><%= time_ago_in_words(comment.created_at) %> ago</span>
				<% else %>
					<span class='comment_time'><%= comment.created_at.strftime("%B %d at %I:%M%p") %></span>
				<% end %>
			</div>
	  	<% end %>
	  	</div>
	 </div>
</div>

<%= link_to "Go To Timeline", user_memorial_timeline_path %>


