<p id="notice"><%= notice %></p>

<div class="user_info">
<div class="user_profile_pic">
<%= link_to (image_tag "user_silhouette.png") %>
</div>

<p>
  <strong>First name:</strong>
  <%= @user.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @user.last_name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>
<br>
</div>

<div class="memorial_section">
<p> View Memorials you we're invited to. </p>
	<div class="build_memorial_button">
	<!-- link_to 'View Memorials here' -->
	Enter <!-- placeholder until link above works -->
	</div>

<section>
	<% @user.memorials.each do |memorial| %>
	  <div>
	  <%= memorial.title %>
		  <br>
		  <%= memorial.description %>
		  </br>
		  <br>
		
	  </div>
  	<% end %>
</section>



<br>





<div class="memorial_create">
<p> Create your Memorial here. </p>
	<div class="build_memorial_button"
	<%= link_to 'Build memorial now', user_new_memorial_path(@user.id) %>
	</div>
<br>
</div>


<section class = "new_memorial_popup">
<%= form_for([@user, @memorial]) do |f| %>
  <div class="field">
     <%= f.label :title %><br>
     <%= f.text_field :title, value: 'Title'%>
    </div>
    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name, value: 'Name' %>
    </div>
    <div class="field">
      <%= f.label :description %><br>
      <%= f.text_field :description, value: 'Description' %>
    </div>
    <div class="field">
     <%= f.label :birth_date %><br>
     <%= f.date_field :birth_date %>
    </div>
    <div class="field">
      <%= f.label :death_date %><br>
      <%= f.date_field :death_date %>
    </div>
    <div class="actions">
     <%= f.submit %>
    </div>
<% end %>
</section>









