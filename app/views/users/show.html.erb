  <button class="popup_button">Create Memorial</button>

</div>

    <!-- The popup for creating a new memorial. -->
    <section class = "new_memorial_popup">
    <%= form_for([@user, @memorial]) do |f| %>
      <fieldset class="memorial_info left_field">
      <div class="left_div">
         <%= f.label :title %><br>
         <%= f.text_field :title, placeholder: 'Memorial Title'%>
        </div>
        <div class="left_div">
          <%= f.label :name %><br>
          <%= f.text_field :name, placeholder: 'Name' %>
        </div>
      </fieldset>

      <fieldset class="memorial_info middle_field">
           <div class="middle_div">
         <%= f.label :birth_date %><br>
         <%= f.date_field :birth_date, class: 'date_field' %>
        </div>
        <div class="middle_div">
          <%= f.label :death_date %><br>
          <%= f.date_field :death_date, class: 'date_field' %>
        </div>
      </fieldset>

      <fieldset class="memorial_info right_field">
       <%= f.text_area :description, placeholder: 'Description', class: 'text_area_description'  %>
      </fieldset>
      <%= image_tag("x.png", class: 'create-memorial-x')%>


<br>


      <fieldset class="memorial_info bottom_field">
        <div class="bottom_div">
         <%= f.submit "Save", class: "new_memorial_button" %>
        </div>
      </fieldset>
    <% end %>
    </section>


    <br>


<section class="memorials_invited">
  <p id="titlememorial"> Memorials to view </p>
    <% if(@user.memorials.first == nil) %>
      <div class="box placeholder-box"></div>
    <% end %>

  <% @user.memorials.each do |memorial| %>
    <div class="box content-box" style= "background-image: url('<%= memorial.path %>'); background-size: 100% 100%;">
      <div id="boxlink"><%= link_to "#{memorial.title}", user_memorial_path(@user.id, memorial.id) %></div>
      <br>
      <%#= memorial.name %>

      </br><br>
      <%#= @user.memorial_users.find_by_memorial_id(memorial.id).role %>

      </br>
    </div>
  <% end %>

      <div class="box placeholder-box"></div>
</section>



